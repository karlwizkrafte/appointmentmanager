<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cpe121.group3.TableViewController" stylesheets="@style/tableviewButtonStyle.css">
   <top>
      <VBox spacing="0.0">
         <children>
            <!-- Custom Title Bar -->
