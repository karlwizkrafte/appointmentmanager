<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cpe121.group4.PrimaryController">
   <top>
      <VBox spacing="0.0">
         <children>
            <!-- Custom Title Bar -->
            <HBox fx:id="titleBar" alignment="CENTER_LEFT" onMouseDragged="#onTitleBarDragged" onMousePressed="#onTitleBarPressed" style="-fx-background-color: #1a1a1a; -fx-padding: 5px 10px;">
               <children>
                  <Label style="-fx-text-fill: white; -fx-font-size: 12px;" text="Appointment Manager (Version 1 - WORKING PROTOTYPE)" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER_RIGHT" spacing="0.0">
                     <children>
                        <Button fx:id="minimizeButton" onAction="#minimizeWindow" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: transparent; -fx-font-size: 12px; -fx-padding: 5px 10px;" text="–" />
                        <Button fx:id="maximizeButton" onAction="#maximizeWindow" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: transparent; -fx-font-size: 12px; -fx-padding: 5px 10px;" text="□" />
                        <Button fx:id="closeButton" onAction="#closeWindow" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: transparent; -fx-font-size: 14px; -fx-padding: 6px 10px 4px 10px;" text="×" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <!-- Main Header -->
            <VBox spacing="10.0" style="-fx-background-color: #232323;">
               <children>
                  <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Appointment Manager" textFill="WHITE" />
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="addAppointmentButton" onAction="#showAddAppointment" style="-fx-background-color: #232323; -fx-border-color: #FFFFFF;" text="Add Appointment" textFill="WHITE" />
                        <Button fx:id="editAppointmentButton" onAction="#editSelectedAppointment" style="-fx-background-color: #232323; -fx-border-color: #FFFFFF;" text="Edit Appointment" textFill="WHITE" />
                        <Button fx:id="deleteAppointmentButton" onAction="#deleteSelectedAppointment" style="-fx-background-color: #232323; -fx-border-color: #FFFFFF;" text="Delete Appointment" textFill="WHITE" />
                        <Button fx:id="refreshButton" onAction="#refreshTable" style="-fx-background-color: #232323; -fx-border-color: #FFFFFF;" text="Refresh" textFill="WHITE" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="appointmentTable">
         <columns>
            <TableColumn fx:id="titleColumn" editable="false" prefWidth="200.0" text="Title" />
            <TableColumn fx:id="participantColumn" prefWidth="150.0" text="Participant" />
            <TableColumn fx:id="appointmentDateColumn" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="appointmentTimeColumn" prefWidth="80.0" text="Time" />
            <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
         </columns>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label fx:id="statusLabel" text="Ready" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
